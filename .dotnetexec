{
 "name": "back-silver",
 "env": {
  "TEST_THRESHOLD": 90
 },
 "commands": {
  "start": ["dotnet run --project=$PWD/back-silver.csproj"],
  "clean": ["dotnet clean"],
  "test": [
   "dotnet test /p:CollectCoverage=true /p:CoverletOutputFormat=opencover /p:CoverletOutput=\"$PWD/test_result/coverage.xml\" /p:Threshold=$TEST_THRESHOLD /p:ThresholdType=line /p:ThresholdStat=total",
   "dotnet reportgenerator Verbosity=Error \"-reports:$PWD/test_result/coverage.xml\" \"-targetdir:test_result/report\" -historydir:test_result/history >> /dev/null "
  ],
  "watch": ["dotnet build", "dotnet watch -p=src/server.csproj run"]
 }
}